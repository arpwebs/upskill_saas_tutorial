<!-- DevMatch Landing Page (Bootstrap 3 version) -->
<div class="devmatch-landing">
  <!-- Hero Section -->
  <section class="hero">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <div class="hero-content">
            <h1>Connect with top tech talent</h1>
            <p class="lead">DevMatch helps companies find qualified developers and engineers who are ready for their next opportunity.</p>
            <div class="cta-buttons">
              <%= link_to "Sign up with Basic", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg' %>
              <%= link_to "Sign up with Pro", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-default btn-lg' %>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="hero-image">
            <img src="<%= asset_path('developer-illustration.png') %>" alt="Developer illustration" class="img-responsive">
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Key Features Section -->
  <section class="features">
    <div class="container">
      <h2 class="section-title">Why choose DevMatch?</h2>
      <div class="row">
        <div class="col-md-4">
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-bullseye"></i>
            </div>
            <h3>Targeted Matching</h3>
            <p>Our intelligent algorithm connects companies with developers who match their technical requirements and culture.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-bolt"></i>
            </div>
            <h3>Quick Responses</h3>
            <p>Get applications from qualified candidates within hours, not weeks.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="feature-card">
            <div class="feature-icon">
              <i class="fas fa-code"></i>
            </div>
            <h3>Tech-Focused</h3>
            <p>Specialized in developers, engineers, and tech roles - no irrelevant candidates.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="how-it-works">
    <div class="container">
      <h2 class="section-title">How It Works</h2>
      <div class="row">
        <div class="col-md-4">
          <div class="step">
            <div class="step-number">1</div>
            <h3>Create a profile</h3>
            <p>Companies: Post detailed job descriptions with technical requirements.<br>
               Developers: Showcase your skills, experience, and portfolio.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="step">
            <div class="step-number">2</div>
            <h3>Get matched</h3>
            <p>Our algorithm connects the right developers with the right opportunities based on skills and preferences.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="step">
            <div class="step-number">3</div>
            <h3>Connect directly</h3>
            <p>Message qualified candidates, schedule interviews, and make hiring decisions - all within the platform.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="testimonials">
    <div class="container">
      <h2 class="section-title">What our users say</h2>
      <div class="row">
        <div class="col-md-6">
          <div class="testimonial">
            <p class="quote">"We hired two senior Ruby developers through DevMatch in less than two weeks. The quality of candidates was impressive."</p>
            <div class="testimonial-author">
              <p class="name">Sarah Johnson</p>
              <p class="role">CTO at TechFlow</p>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="testimonial">
            <p class="quote">"After updating my DevMatch profile, I received three interview requests from companies that perfectly matched my skills and interests."</p>
            <div class="testimonial-author">
              <p class="name">Michael Chen</p>
              <p class="role">Full Stack Developer</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call To Action Section -->
  <section class="cta">
    <div class="container">
      <div class="row">
        <div class="col-md-8 col-md-offset-2 text-center">
          <h2>Ready to find your perfect match?</h2>
          <p>Join thousands of companies and developers already using DevMatch</p>
          <div class="cta-buttons">
            <a href="#" class="btn btn-primary btn-lg">Hire Developers</a>
            <a href="#" class="btn btn-default btn-lg">Find Your Next Role</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>